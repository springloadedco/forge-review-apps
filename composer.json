{
    "name": "springloadedco/forge-review-apps",
    "description": "A CLI tool for managing your review apps on Laravel Forge.",
    "keywords": ["forge", "laravel", "laravel zero", "console", "cli"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/springloadedco/forge-review-apps/issues",
        "source": "https://github.com/springloadedco/forge-review-apps"
    },
    "authors": [
        {
            "name": "Owen Conti",
            "email": "owen@springloaded.co"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/forge-sdk": "^3.14",
        "nunomaduro/termwind": "^1.15.1"
    },
    "require-dev": {
        "laravel-zero/framework": "^10.2",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.22"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/forge-review-apps"]
}
